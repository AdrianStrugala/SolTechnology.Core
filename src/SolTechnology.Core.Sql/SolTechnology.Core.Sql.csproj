<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>

		<Authors>Adrian Strugala</Authors>
		<Version>0.1.1</Version>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Description>SolTechnology Core Sql library</Description>
		<PackageTags>sol technology core sql</PackageTags>
		<Product>SolTechnology.Core.Sql</Product>
		<PackageId>SolTechnology.Core.Sql</PackageId>
		<AssemblyName>SolTechnology.Core.Sql</AssemblyName>
		<RepositoryUrl>https://github.com/AdrianStrugala/SolTechnology.Core</RepositoryUrl>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<PackageIcon>docs\mini-logo.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="6.0.0" />
		<PackageReference Include="Polly" Version="7.2.*" />
		<PackageReference Include="System.Data.SqlClient" Version="4.8.*" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\docs\mini-logo.png" Pack="true" Visible="false" PackagePath="docs\mini-logo.png" />
	</ItemGroup>

</Project>
