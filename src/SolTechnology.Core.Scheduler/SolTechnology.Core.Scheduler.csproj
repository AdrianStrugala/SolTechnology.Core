<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Version>0.2.0</Version>
		<TreatWarningsAsErrors>false</TreatWarningsAsErrors>
		<Description>SolTechnology Core Azure scheduler library</Description>
		<PackageTags>sol technology core azure background jobs cronos scheduler</PackageTags>
		<Product>SolTechnology.Core.Scheduler</Product>
		<PackageId>SolTechnology.Core.Scheduler</PackageId>
		<AssemblyName>SolTechnology.Core.Scheduler</AssemblyName>

		<PackageIcon>docs\mini-logo.png</PackageIcon>
		<PackageReadmeFile>docs\readme.md</PackageReadmeFile>
	</PropertyGroup>
	<ItemGroup>
		<None Include="..\..\docs\mini-logo.png" Pack="true" Visible="false" PackagePath="docs\mini-logo.png" />
		<None Include="..\..\docs\Cron.md" Pack="true" Visible="false" PackagePath="docs\readme.md" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="10.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0" />
		<PackageReference Include="Cronos" Version="0.8.4" />
	</ItemGroup>

</Project>
