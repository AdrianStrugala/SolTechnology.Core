<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net6.0</TargetFramework>
	  <ImplicitUsings>enable</ImplicitUsings>

	  <Authors>Adrian Strugala</Authors>
	  <Version>0.2.0</Version>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <Description>SolTechnology Core Authentication library</Description>
	  <PackageTags>sol technology core azure api authentication</PackageTags>
	  <Product>SolTechnology.Core.Authentication</Product>
	  <PackageId>SolTechnology.Core.Authentication</PackageId>
	  <AssemblyName>SolTechnology.Core.Authentication</AssemblyName>
	  <RepositoryUrl>https://github.com/AdrianStrugala/SolTechnology.Core</RepositoryUrl>
	  <SymbolPackageFormat>snupkg</SymbolPackageFormat>

	  <PackageIcon>docs\mini-logo.png</PackageIcon>
  </PropertyGroup>
	<ItemGroup>
		<None Include="..\..\docs\mini-logo.png" Pack="true" Visible="false" PackagePath="docs\mini-logo.png" />
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
  </ItemGroup>

</Project>
