<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>

		<Authors>Adrian Strugala</Authors>
		<Version>0.1.1</Version>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Description>SolTechnology Core API client library</Description>
		<PackageTags>sol technology core azure api client</PackageTags>
		<Product>SolTechnology.Core.ApiClient</Product>
		<PackageId>SolTechnology.Core.ApiClient</PackageId>
		<RepositoryUrl>https://github.com/AdrianStrugala/SolTechnology.Core</RepositoryUrl>
		<AssemblyName>SolTechnology.Core.ApiClient</AssemblyName>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<PackageIcon>docs\mini-logo.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="AvroConvert" Version="3.2.3" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\docs\mini-logo.png" Pack="true" Visible="false" PackagePath="docs\mini-logo.png" />
	</ItemGroup>

</Project>
