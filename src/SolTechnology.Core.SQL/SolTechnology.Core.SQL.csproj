<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Version>0.5.0</Version>
		<TreatWarningsAsErrors>false</TreatWarningsAsErrors>
		<Description>SQL Server database access layer with Dapper, Entity Framework support, Testcontainers integration for testing, and Polly resilience policies. Includes DacFx for database deployment and schema management in CI/CD pipelines.</Description>
		<PackageTags>sol technology core sql database dapper entity-framework testcontainers polly resilience dacpac sqlserver dotnet orm testing</PackageTags>
		<Product>SolTechnology.Core.Sql</Product>
		<PackageId>SolTechnology.Core.Sql</PackageId>
		<AssemblyName>SolTechnology.Core.Sql</AssemblyName>

		<PackageIcon>docs\mini-logo.png</PackageIcon>
		<PackageReadmeFile>docs\readme.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/AdrianStrugala/SolTechnology.Core</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\docs\mini-logo.png" Pack="true" Visible="false" PackagePath="docs\mini-logo.png" />
		<None Include="..\..\docs\Sql.md" Pack="true" Visible="false" PackagePath="docs\readme.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.SqlServer.DacFx" Version="170.1.61" />
		<PackageReference Include="Polly" Version="8.5.0" />
		<PackageReference Include="Testcontainers" Version="3.9.0" />
		<PackageReference Include="Testcontainers.MsSql" Version="3.9.0" />
	</ItemGroup>

</Project>
